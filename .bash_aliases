# Alias file for common tasks in Manjaro Linux

# youtube alias
alias YB="firefox www.youtube.com"

#EIDITING  ALIAS FILE
alias ALIAS="sudo nano /home/ryzen/.bash_aliases"

# Installing from Pamac
alias II='pamac install'

# Upgrade system
alias UPG='sudo pacman -Syu'

# Searching
alias SR='pamac search'

# Installing packages
alias PL='sudo pacman -S'

# Removing packages
alias RM='sudo pacman -R'

# Logging out
alias LG='logout'

# Restarting system
alias RS='sudo reboot'

# Editing configuration files
alias NN='nano'

# Reloading system configurations
alias RL='source /etc/profile'

# Restarting services
alias CTL='sudo systemctl'

# Updating package databases
alias UPD='sudo pacman -Sy'

# Changing network settings
alias CN='sudo netctl'

# Refreshing system information
alias RF='sudo pacman -Fy'

# Exiting applications or sessions
alias EX='exit'

# Backing up data
alias BA='rsync -a'

# Rebooting systea
alias RMF='sudo rm -r'

# Installing from AUR
alias IF='yay -S'

# Checking for updates
alias CU='checkupdates'

# Synchronizing package databases
alias SP='sudo pacman -Syy'
